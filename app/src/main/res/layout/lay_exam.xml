<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingVertical="10dp"
                android:background="@drawable/bottomroundsheet"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingVertical="20dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/railway"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"

                        android:layout_marginHorizontal="5dp"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_cat"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="@font/raleway"
                            android:gravity="center_horizontal"
                            android:textColor="@color/primary"
                            android:text="0 papers"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Railway Exams"
                            android:fontFamily="@font/raleway_bold"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:layout_marginVertical="10dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.04"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"

                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/page"
                                    app:tint="#B6B6B6"
                                    />

                                <TextView
                                    android:id="@+id/total_papers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="10dp"
                                    android:fontFamily="@font/roboto"
                                    android:gravity="center_horizontal"
                                    android:textColor="#444444"
                                    android:text="0 papers"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    app:tint="#B6B6B6"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/user"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="150 Students"
                                    android:layout_marginHorizontal="10dp"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="#444444"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>
                        </LinearLayout>




                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:tint="@color/black"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/baseline_arrow_back_ios_new_24" />


            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/full_paper"
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="3dp"
                                android:background="#D2D2D2"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:paddingLeft="5dp"
                                android:text="Full Length\nPaper"
                                android:fontFamily="@font/raleway"
                                android:textColor="@color/black"
                                android:layout_marginHorizontal="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/tv_full"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text=""
                                android:layout_marginHorizontal="10dp"
                                android:fontFamily="@font/raleway"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginVertical="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand_bold"
                                android:textStyle="bold"
                                android:textColor="@color/primary"
                                android:textSize="16sp"
                                android:text="Explore -> " />


                        </LinearLayout>



                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="112dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/l"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginVertical="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/sub_paper"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="3dp"
                                android:background="#D2D2D2"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"

                                android:paddingLeft="5dp"
                                android:text="Subject Wise \nPaper"
                                android:fontFamily="@font/raleway"
                                android:textColor="@color/black"
                                android:layout_marginHorizontal="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_subject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text=""
                                android:layout_marginHorizontal="10dp"
                                android:fontFamily="@font/raleway"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginVertical="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand_bold"
                                android:textStyle="bold"
                                android:textColor="@color/primary"
                                android:textSize="16sp"
                                android:text="Explore -> " />


                        </LinearLayout>



                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="112dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/frame_21"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/topic_paper"
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="3dp"
                                android:background="#D2D2D2"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"

                                android:paddingLeft="5dp"
                                android:text="Topic Wise\nPaper"
                                android:fontFamily="@font/raleway"
                                android:textColor="@color/black"
                                android:layout_marginHorizontal="5dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/tv_topic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text=""
                                android:layout_marginHorizontal="10dp"
                                android:fontFamily="@font/raleway"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginVertical="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand_bold"
                                android:textStyle="bold"
                                android:textColor="@color/primary"
                                android:textSize="16sp"
                                android:text="Explore -> " />


                        </LinearLayout>



                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="112dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/frame_22"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </ScrollView>



    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/primary"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progress_circular"/>




</RelativeLayout>