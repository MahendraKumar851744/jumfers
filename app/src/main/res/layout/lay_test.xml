<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"

                android:background="@drawable/bottomroundsheet2"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:id="@+id/railway"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="0dp"

                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="40dp"
                        android:src="@drawable/baseline_arrow_back_ios_new_24"
                        android:layout_height="24dp" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/raleway"
                        android:letterSpacing="0.04"
                        android:text="Mathematics"
                        android:textColor="@color/white"

                        android:textSize="24sp"
                        android:textStyle="bold" />

                </RelativeLayout>

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:id="@+id/rv"-->
<!--                    android:layout_marginVertical="10dp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="50dp" />-->

                <TextView
                    android:id="@+id/question_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Question 2"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/raleway"
                    android:text="Find the Missing Term in Multiples of 6 : 6, 12, 18, 24, _, 36, 42, _ 54, 60."
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:gravity="end">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/primary"

                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/frame_51"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/tv_timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:fontFamily="@font/roboto"
                                android:gravity="center_horizontal"
                                android:text="00:30"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_opt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="8dp"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:background="@drawable/rounded_corner"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"

                        android:text="a."
                        android:fontFamily="@font/raleway"
                        android:background="@color/white"
                        />

                    <TextView
                        android:id="@+id/option1"
                        android:textStyle="bold"

                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/raleway"
                        android:background="@color/white"
                        android:text="32, 45" />
                    <ImageView
                        android:id="@+id/img_opt1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/tick_grey"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_opt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="8dp"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:background="@drawable/rounded_corner"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="b."
                        android:fontFamily="@font/raleway"
                        android:background="@color/white"
                        />

                    <TextView
                        android:id="@+id/option2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        android:fontFamily="@font/raleway"
                        android:background="@color/white"
                        android:text="30, 48" />
                    <ImageView
                        android:id="@+id/img_opt2"

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/tick_grey"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_opt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="8dp"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:background="@drawable/rounded_corner"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="c."
                        android:fontFamily="@font/raleway"
                        android:background="@color/white"
                        />

                    <TextView
                        android:id="@+id/option3"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        android:fontFamily="@font/raleway"
                        android:background="@color/white"
                        android:text="24, 40" />
                    <ImageView
                        android:id="@+id/img_opt3"

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/tick_grey"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_opt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="8dp"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:background="@drawable/rounded_corner"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="d."
                        android:fontFamily="@font/raleway"
                        android:background="@color/white"
                        />

                    <TextView
                        android:id="@+id/option4"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/raleway"
                        android:background="@color/white"
                        android:textStyle="bold"
                        android:text="25, 49" />
                    <ImageView
                        android:id="@+id/img_opt4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/tick_grey"
                        />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000000"
            android:id="@+id/skip"
            app:cardCornerRadius="35dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arr_back"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/raleway"
                    android:gravity="center_horizontal"
                    android:text="Previous"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#EB5D1E"
            android:id="@+id/next"

            app:cardCornerRadius="35dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp">



                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/raleway"
                    android:gravity="center_horizontal"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_right_alt_24"
                    app:tint="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/progress_circular"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/primary"
            />

    </LinearLayout>



</RelativeLayout>