<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingVertical="20dp"
                android:background="@drawable/bottomroundsheet"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/railway"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"

                    android:layout_marginHorizontal="5dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/railway"/>
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Railway Exams"
                        android:fontFamily="@font/raleway_bold"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:layout_marginVertical="10dp"
                        android:textStyle="bold"
                        android:letterSpacing="0.04"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"

                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/page"
                                />

                            <TextView
                                android:id="@+id/total_papers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:text="0 papers"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/user"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="150 Students"
                                android:layout_marginHorizontal="10dp"
                                android:fontFamily="@font/raleway_bold"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sub_category_items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>



    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/primary"
        android:layout_centerInParent="true"
        android:id="@+id/progress_circular"/>




</RelativeLayout>