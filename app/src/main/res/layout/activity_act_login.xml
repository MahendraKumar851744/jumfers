<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jumfers.mocktestseries.Act_login">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/mask3"
        android:src="@drawable/mask3"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:id="@+id/grp4"
        android:layout_marginTop="50dp"
        android:src="@drawable/mask40"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/grp4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="Welcome back" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginVertical="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:gravity="center"
                android:textColor="#575757"
                android:layout_below="@+id/grp4"
                android:textSize="14sp"
                android:text="Didnâ€™t Have an Account?" />

            <TextView
                android:id="@+id/register"
                android:layout_marginVertical="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#EB5D1E"
                android:layout_below="@+id/grp4"
                android:textSize="14sp"
                android:text=" Register" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grp4"
            android:paddingHorizontal="40dp"
            android:layout_marginVertical="4dp"
            android:lineSpacingExtra="5dp"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Log in to your account to boost your knowledge, skills, &amp; confidence"
            android:textColor="#000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="8dp"
                >
                <EditText
                    android:inputType="text"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#575757"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="15dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/raleway"
                    android:background="@color/white"
                    android:hint="Email" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="8dp"
                >
                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#575757"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="15dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/raleway"
                    android:background="@color/white"
                    android:hint="Password" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_marginHorizontal="40dp"
            android:textColor="#EB5D1E"
            android:layout_below="@+id/grp4"
            android:textSize="14sp"
            android:text="Forgot Password?" />
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            app:cardBackgroundColor="#EB5D1E"

            app:cardCornerRadius="25dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:fontFamily="@font/raleway"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginVertical="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:gravity="center"
            android:textColor="#575757"
            android:layout_below="@+id/grp4"
            android:textSize="12sp"
            android:text="Or continue with" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_marginHorizontal="10dp"
                app:cardBackgroundColor="#F3F3F3"

                android:layout_height="60dp">
                <ImageView
                    android:src="@drawable/facebook"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/google"
                android:layout_width="60dp"
                app:cardBackgroundColor="#F3F3F3"
                android:layout_height="60dp">
                <ImageView
                    android:src="@drawable/google"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:src="@drawable/mask2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="#EB5D1E" />
</RelativeLayout>